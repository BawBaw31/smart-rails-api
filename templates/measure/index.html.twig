{% extends 'base.html.twig' %}

{% block title %}Measure index{% endblock %}

{% block body %}
    <h1>Measure index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>Theoretical_value</th>
                <th>Min_value</th>
                <th>Max_value</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for measure in measures %}
            <tr>
                <td>{{ measure.id }}</td>
                <td>{{ measure.label }}</td>
                <td>{{ measure.theoreticalValue }}</td>
                <td>{{ measure.minValue }}</td>
                <td>{{ measure.maxValue }}</td>
                <td>
                    <a href="{{ path('app_measure_show', {'id': measure.id}) }}">show</a>
                    <a href="{{ path('app_measure_edit', {'id': measure.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_measure_new') }}">Create new</a>
{% endblock %}
