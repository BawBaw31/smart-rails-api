<form class="mt-5" method="post" action="{{ path('app_measure_delete', {'id': measure.id}) }}" 
onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ measure.id) }}">
    <button class="px-5 py-2 bg-red-300 rounded-md shadow-xl hover:bg-red-400">Delete</button>
</form>
